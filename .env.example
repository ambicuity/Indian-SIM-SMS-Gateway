# ─── Telegram Bot ───────────────────────────────────────────
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# ─── Redis ──────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ─── MQTT Broker ────────────────────────────────────────────
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_TOPIC_SMS=gateway/sms/inbound
MQTT_TOPIC_TELEMETRY=gateway/telemetry

# ─── n8n Webhook (CTO-Agent) ───────────────────────────────
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/gateway-alert
N8N_WEBHOOK_SECRET=your_webhook_secret_here

# ─── Email Fallback ────────────────────────────────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_RECIPIENT=your_recipient@example.com

# ─── Encryption ────────────────────────────────────────────
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_ENCRYPTION_KEY=your_fernet_key_here

# ─── Gateway Configuration ─────────────────────────────────
QUEUE_MAX_SIZE=10000
MAX_RETRY_ATTEMPTS=5
DLO_TTL_HOURS=72
CONSUMER_CONCURRENCY=3
HEALTH_CHECK_INTERVAL_SECONDS=30

# ─── Alert Thresholds ──────────────────────────────────────
BATTERY_LOW_THRESHOLD=20
SIGNAL_LOW_THRESHOLD=-100
HEARTBEAT_TIMEOUT_SECONDS=120
ALERT_COOLDOWN_SECONDS=300
